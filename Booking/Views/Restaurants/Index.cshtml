@model IEnumerable<Booking.BO.Restaurant>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Foto
        </th>

        <th>
            No.
        </th>
        <th>
            Restaurant
        </th>

        <th>
            Visible
        </th>
        <th>
            Valoracion
        </th>
        
        <th>
            Info
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="~/Public/Restaurants/@(string.IsNullOrEmpty(item.Picture) ? "intec.png" : item.Picture)" style="height:75px; border-radius:50%" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Seq)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name) <br />
        <small>@item.CreatedDate</small>
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Enabled)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rate)
    </td>
    <td>
        @item.Category.Name <br />
        @item.Country.Name <br />
        @item.KindOfFood.Name
    </td>
   
    <td>
        <a href="/Restaurants/Public">Public</a> |
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
